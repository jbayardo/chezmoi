function zj() {
  # Use gsettings get org.gnome.desktop.interface color-scheme to select tokyonight or tokyonight-day
  local color_scheme=$(gsettings get org.gnome.desktop.interface color-scheme | tr -d "'")
  if [[ "$color_scheme" == "prefer-dark" ]]; then
    zellij options --theme tokyo-night "$@"
  else
    zellij options --theme tokyo-night-light "$@"
  fi
}

