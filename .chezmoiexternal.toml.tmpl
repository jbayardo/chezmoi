{{ if eq .chezmoi.os "linux" -}}
[".oh-my-zsh"]
    type = "archive"
    url = "https://github.com/ohmyzsh/ohmyzsh/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"

[".oh-my-zsh/custom/plugins/zsh-syntax-highlighting"]
    type = "archive"
    url = "https://github.com/zsh-users/zsh-syntax-highlighting/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"

[".emacs.d"]
    type = "archive"
    url = "https://github.com/syl20bnr/spacemacs/archive/develop.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"

{{ end -}}
[".config/nvim"]
    type = "git-repo"
    url = "https://github.com/jbayardo/astronvim.git"
    refreshPeriod = "1h"

{{ if eq .chezmoi.os "windows" -}}
["applications.yaml"]
    type = "file"
    refreshPeriod = "168h"
    url = "https://raw.githubusercontent.com/LGUG2Z/komorebi-application-specific-configuration/refs/heads/master/applications.yaml"
{{ end -}}
